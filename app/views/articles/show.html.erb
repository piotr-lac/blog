<h1>Show</h1>

<p>
	<strong> Title: </strong>
	<%= @article.title %>
</p>
<p>
	<strong> Tekst: </strong>
	<%= @article.text %>
</p>



<% @article.comments.each do |comment| %>
<p>
	<strong> Commenter: </strong>
	<%= comment.commenter %>
</p>
<p>
	<strong> Comment: </strong>
	<%= comment.body %>
</p>

<% end %>


<%= form_for(@article.comments.build) do |f| %>
	<%= f.hidden_field :article_id %>
	<p> 
		<%= f.label :commenter %>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>

<h5> <%= link_to 'Back', articles_path %> </h5>