<%= form_for([@article,@article.comments.build]) do |f| %>
	
	<%= render 'common/error_messages', model: @comment %>
	<%= f.hidden_field :article_id %>


	<p> 
		<%= f.label :commenter %>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>